<!DOCTYPE html>
<html>
  <head>
    <title>FuzzyStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
      <% if current_user %>
        <%= current_user.email%>, Admin: <%=current_user.admin  %>
        <%= link_to "My cart", cart_path %>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
